#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t>0){
	    int n;
	    cin>>n;
	    if(n<=4){
	        cout<<"1"<<endl;
	    }
	    else if((n%4)==0){
	        cout<<n/4<<endl;
	    }
	    else{
	        cout<<(n/4)+1<<endl;
	    }
	    t--;
	}
	return 0;
}
