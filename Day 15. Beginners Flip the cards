#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t>0){
	    int n,x;
	    cin>>n>>x;
	    if(n==x || x==0){
	        cout<<0<<endl;
	    }
	    else if(n-x>x){
	        cout<<x<<endl;
	    }
	    else{
	        cout<<n-x<<endl;
	    }
	    t--;
	}
	return 0;
}
